<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:layout_gravity="center">
        <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Name"
                android:textSize = "16dp"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical" android:layout_weight="1"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/etName" android:layout_gravity="center" android:layout_weight="6"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="100dp"
                  android:layout_gravity="center" android:id="@+id/linearLayout">
        <TextView android:layout_width="fill_parent" android:layout_height="30dp" android:text="Description"
                  android:textSize="16dp" android:id="@+id/textView1" android:layout_gravity="left|center_vertical"
                  android:layout_weight="1"/>
        <EditText android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/etDescription"
                  android:layout_gravity="center" android:layout_weight="6"/>
    </LinearLayout>
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="150dp" android:id="@+id/radioGroup">
        <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Low"
                android:id="@+id/rbLow" android:layout_weight="1" android:checked="false"/>
        <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Middle"
                android:id="@+id/rbMid" android:layout_weight="1" android:checked="false"/>
        <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="High"
                android:id="@+id/rbHigh" android:layout_weight="1" android:checked="false"/>
    </RadioGroup>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50dp"
                  android:layout_gravity="center" android:id="@+id/linearLayout1">
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Save"
                android:id="@+id/btnSave" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Delete"
                android:id="@+id/btnDelete" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Cancel"
                android:id="@+id/btnCancel" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>