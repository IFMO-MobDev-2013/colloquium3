<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/darker_gray"

        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Добавить задачу"
            android:textColor="@android:color/black"
            android:background="@android:color/holo_purple"
            android:id="@+id/textView" android:layout_gravity="center" android:textSize="22dp"
            android:gravity="center_vertical|center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center" android:layout_weight="0.5">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/editText" android:layout_gravity="center" android:layout_weight="7"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+"
                android:id="@+id/button" android:layout_gravity="center" android:layout_weight="1"
                android:textSize="30dp" android:onClick="add"/>
    </LinearLayout>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView" android:layout_gravity="center" android:layout_weight="10"/>
</LinearLayout>

